---
export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="font-sans text-center">
		<slot />
	</body>
</html>
